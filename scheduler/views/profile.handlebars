<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Reservation:</h3>

    <form class="form new-reservation-form">
      <div class="form-group">
        <label for="guest-name">Guest name:</label>
        <input class="form-input" type="text" id="guest-name" name="guest-name" />
      </div>
      <div class="form-group">
        <label for="res-date">Reservation Date (YYYY-MM-DD):</label>
        <input class="form-input" type="text" id="res-date" name="res-date" />
      </div>
      <div class="form-group">
        <label for="phone-num">Phone Number:</label>
        <textarea class="form-input" type="number" id="phone-num" name="phone-num"></textarea>
      </div>
      <div class="form-group">
        <label for="party-num">Party of:</label>
        <textarea class="party-num" type="number" id="party-num" name="party-num"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if reservations.length}}
  <div class="col-md-6 reservation-list">
    <h3>Current Reservations:</h3>

    {{#each reservations as |reservation|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/reservation/{{reservation.id}}">{{reservation.guest_name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{reservation.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>